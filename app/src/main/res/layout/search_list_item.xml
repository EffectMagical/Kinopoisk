<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_click_item"
    android:layout_width="324dp"
    android:layout_height="107dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/white">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/image_item_search"
        android:layout_width="60dp"
        android:layout_height="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintTop_toBottomOf="@id/view"/>

    <TextView
        android:id="@+id/search_ru_name_item"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="14sp"
        android:text="Чебурашка"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/image_item_search"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:layout_marginTop="5dp"
        android:layout_marginStart="23dp"/>

    <TextView
        android:id="@+id/search_name_year_duration_item"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="8sp"
        android:text="fkfkflf;f"
        app:layout_constraintStart_toEndOf="@id/image_item_search"
        app:layout_constraintTop_toBottomOf="@id/search_ru_name_item"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/search_country_item"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="8sp"
        android:text="fkfkflf;f"
        app:layout_constraintStart_toEndOf="@id/image_item_search"
        app:layout_constraintTop_toBottomOf="@id/search_name_year_duration_item"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/search_genre_item"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="8sp"
        android:text="fkfkflf;f"
        app:layout_constraintStart_toEndOf="@id/search_country_item"
        app:layout_constraintTop_toBottomOf="@id/search_name_year_duration_item"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/search_mark_item"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="8sp"
        android:text="fkfkflf;f"
        app:layout_constraintStart_toEndOf="@id/image_item_search"
        app:layout_constraintTop_toBottomOf="@id/search_country_item"
        android:layout_marginStart="22dp"
        android:layout_marginTop="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>