<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/innovations_click_item"
    android:clickable="true"
    android:layout_width="324dp"
    android:layout_height="107dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:background="@color/white">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/image_item_innovations"
        android:layout_width="60dp"
        android:layout_height="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintTop_toBottomOf="@id/view"/>

    <TextView
        android:id="@+id/innovations_name_item"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="14sp"
        android:text="Чебурашка"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/image_item_innovations"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:layout_marginTop="5dp"
        android:layout_marginStart="23dp"/>

    <TextView
        android:id="@+id/innovations_year_duration_en_name_item"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="8sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="fkfkflf;f"
        app:layout_constraintStart_toEndOf="@id/image_item_innovations"
        app:layout_constraintTop_toBottomOf="@id/innovations_name_item"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/innovations_country_item"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="8sp"
        android:textColor="@color/black"
        android:text="fkfkflf;f"
        app:layout_constraintStart_toEndOf="@id/image_item_innovations"
        app:layout_constraintTop_toBottomOf="@id/innovations_year_duration_en_name_item"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/innovations_genre_item"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:text="fkfkflf;f"
        app:layout_constraintStart_toEndOf="@id/innovations_country_item"
        app:layout_constraintTop_toBottomOf="@id/innovations_year_duration_en_name_item"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/innovations_date_item"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="8sp"
        android:text="fkfkflf;f"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/image_item_innovations"
        app:layout_constraintTop_toBottomOf="@id/innovations_country_item"
        android:layout_marginStart="22dp"
        android:layout_marginTop="3dp"
        app:drawableStartCompat="@drawable/date_icon"
        android:drawablePadding="5dp"/>
    
    <ImageButton
        android:id="@+id/fav_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/favourite_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="7dp"
        android:backgroundTint="@color/white"/>
    
    

</androidx.constraintlayout.widget.ConstraintLayout>